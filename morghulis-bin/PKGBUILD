pkgname=morghulis
pkgver=v0.6.0
pkgrel=1
pkgdesc='GTK4 Desktop Shell'
arch=(x86_64)
license=(WTFPL)
url="https://github.com/ARKye03/morghulis"
depends=(
	gtk4
	gtk4-layer-shell
	glib2
	libnm
	libastal-meta
	libadwaita
)
source=("${pkgname}-${pkgver}::${url}/releases/download/${pkgver}/morghulis-${pkgver}")
sha256sums=('51018472ef947bbe2fe5b76c752836c96b0d6e4a288fb2b53fdc0b3e0b5da2e2')

package() {
	install -Dm755 "${srcdir}/morghulis-${pkgver}" "${pkgdir}/usr/bin/morghulis"
}
